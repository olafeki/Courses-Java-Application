<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:orientation="vertical"
   android:textAlignment="center">

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">


       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="397dp"
           android:layout_height="match_parent"
           android:background="@drawable/awa"
           android:padding="12dp">


           <ImageView
               android:id="@+id/courseimage"
               android:layout_width="86dp"
               android:layout_height="102dp"
               android:layout_marginStart="4dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0.272"
               app:srcCompat="@drawable/iso" />

           <TextView
               android:id="@+id/price"
               android:layout_width="101dp"
               android:layout_height="22dp"
               android:layout_marginStart="12dp"
               android:layout_marginTop="12dp"
               android:text="500le"
               android:textAlignment="center"
               android:textColor="@color/black"
               android:textColorLink="@color/black"
               android:textSize="16sp"
               app:layout_constraintStart_toEndOf="@+id/courseimage"
               app:layout_constraintTop_toBottomOf="@+id/coursetitle" />

           <TextView
               android:id="@+id/subject"
               android:layout_width="99dp"
               android:layout_height="22dp"
               android:layout_marginStart="12dp"
               android:layout_marginTop="8dp"
               android:text="Subject"
               android:textAlignment="center"
               android:textColor="@color/black"
               android:textColorLink="@color/black"
               android:textSize="16sp"
               app:layout_constraintStart_toEndOf="@+id/courseimage"
               app:layout_constraintTop_toBottomOf="@+id/price" />

           <TextView
               android:id="@+id/rating"
               android:layout_width="93dp"
               android:layout_height="21dp"
               android:layout_marginStart="164dp"
               android:layout_marginTop="8dp"
               android:text="Rating"
               android:textAlignment="center"
               android:textColor="@color/black"
               android:textColorLink="@color/black"
               android:textSize="16sp"
               app:layout_constraintStart_toEndOf="@+id/courseimage"
               app:layout_constraintTop_toBottomOf="@+id/level" />

           <TextView
               android:id="@+id/level"
               android:layout_width="95dp"
               android:layout_height="23dp"
               android:layout_marginStart="164dp"
               android:layout_marginTop="12dp"
               android:text="Level"
               android:textAlignment="center"
               android:textColor="@color/black"
               android:textColorLink="@color/black"
               android:textSize="16sp"
               app:layout_constraintStart_toEndOf="@+id/courseimage"
               app:layout_constraintTop_toBottomOf="@+id/coursetitle" />

           <TextView
               android:id="@+id/courseid"
               android:layout_width="27dp"
               android:layout_height="26dp"
               android:layout_marginTop="8dp"
               android:text="1"
               android:textAlignment="center"
               android:textSize="16sp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/courseimage" />

           <TextView
               android:id="@+id/coursetitle"
               android:layout_width="264dp"
               android:layout_height="47dp"
               android:text="The Complete HTML , CSS Course - From Novice To Professional"
               android:textAlignment="center"
               android:textColor="@color/black"
               android:textSize="16sp"
               android:textStyle="bold"
               app:layout_constraintStart_toEndOf="@+id/courseimage"
               app:layout_constraintTop_toTopOf="parent" />

       </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.cardview.widget.CardView>


</LinearLayout>
