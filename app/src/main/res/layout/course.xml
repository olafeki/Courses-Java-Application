<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".MainActivity" android:orientation="vertical" android:background="@drawable/course_bg">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <Button
            android:id="@+id/back1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/back"/>
        <ImageView android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/menu"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/adobe_xd"
            android:layout_gravity="center"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adobe XD"
            android:textSize="45dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:layout_gravity="center"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Essentials"
            android:textSize="30dp"
            android:textColor="#fff"
            android:layout_gravity="center"/>
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView android:id="@+id/i1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profile"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"/>
        <TextView android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAVID"
            android:layout_toRightOf="@id/i1"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#305F72"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author, UI/UX Designer"
            android:textSize="16dp"
            android:textColor="#F18C8E"
            android:layout_below="@id/t1"
            android:layout_toRightOf="@id/i1"
            android:layout_marginLeft="20dp"/>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="85dp"
            android:paddingLeft="60dp">
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView android:id="@+id/tt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Introduction"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#305F72"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hours, 20 minutes"
                    android:textSize="16dp"
                    android:textColor="#F18C8E"
                    android:layout_below="@id/tt1"
                    android:layout_marginLeft="20dp"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView android:id="@+id/tt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Design Tools"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#305F72"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hours, 20 minutes"
                    android:textSize="16dp"
                    android:textColor="#F18C8E"
                    android:layout_below="@id/tt2"
                    android:layout_marginLeft="20dp"/>

            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView android:id="@+id/tt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prototyping "
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#305F72"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hours, 20 minutes"
                    android:textSize="16dp"
                    android:textColor="#F18C8E"
                    android:layout_below="@id/tt3"
                    android:layout_marginLeft="20dp"/>

            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView android:id="@+id/tt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exercise"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#305F72"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hours, 20 minutes"
                    android:textSize="16dp"
                    android:textColor="#F18C8E"
                    android:layout_below="@id/tt4"
                    android:layout_marginLeft="20dp"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>